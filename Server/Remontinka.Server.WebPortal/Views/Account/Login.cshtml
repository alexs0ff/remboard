@model Remontinka.Server.WebPortal.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_BusinessLayout.cshtml";
    ViewBag.Title = "Вход";
}


@section Styles {
    <link rel="stylesheet" href="~/Content/Login.css" />
}

<div class="container">
    <div class="container">
        <div class="col-md-12 col-lg-offset-2">
            <div class="login-signup">
                <div class="row">
                    <div class="col-md-8 nav-tab-holder">

                    </div>
                </div>



                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="home">
                        <div class="login-container">
                            <div class="col-md-8 mobile-pull">
                                <article role="login">
                                    <h3 class="text-center"><i class="fa fa-lock"></i>Пользователь</h3>

                                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <fieldset>
                                            <legend>Вход в систему</legend>
                                           
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.Email, new { @class = "" })
                                               
                                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                              
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.Password, new { @class = "" })
                                               
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                              
                                            </div>
                                            <div class="form-group">
                                                
                                                    <div class="checkbox">
                                                        @Html.CheckBoxFor(m => m.RememberMe)
                                                        @Html.LabelFor(m => m.RememberMe)
                                                    </div>
                                               
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" name="login" value="Войти" class="btn btn-primary btn-mrgtp" />
                                            </div>
                                            @Html.ActionLink("Вспомнить пароль", "RecoveryLogin", "Account", null, new { @class = "btn-primary btn-mrgtp" })
                                        </fieldset>
                                    }
                                    <footer role="signup" class="text-center">
                                        <ul>
                                            <li>
                                                @Html.ActionLink("Регистрация", "Register", "Account", null, new { @class = "" })
                                            </li>
                                            <li>
                                                @Html.ActionLink("Главная страница", "Index", "Home", null, new { @class = "" })
                                            </li>
                                        </ul>
                                    </footer>
                                </article>
                            </div>

                        </div>
                        <!-- end of row -->
                    </div>
                    <!-- end of home -->

                </div>

            </div>

        </div>
    </div>

</div>
