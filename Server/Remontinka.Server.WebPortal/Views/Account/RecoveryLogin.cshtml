@using Recaptcha.Web
@using Recaptcha.Web.Mvc
@model Remontinka.Server.WebPortal.Models.RecoveryLoginModel


@{
    Layout = "~/Views/Shared/_BusinessLayout.cshtml";
    ViewBag.Title = "Восстановление";
}


@section Styles {
    <link rel="stylesheet" href="~/Content/Login.css" />
}

<div class="container">
    <div class="container">
        <div class="col-md-12 col-lg-offset-2">
            <div class="login-signup">
                <div class="row">
                    <div class="col-md-8 nav-tab-holder">

                    </div>
                </div>

                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="home">
                        <div class="login-container">
                            <div class="col-md-8 mobile-pull">
                                <article role="login">
                                    <h3 class="text-center"><i class="fa fa-lock"></i>@ViewBag.Title</h3>

                                    @using (Html.BeginForm("RecoveryLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <fieldset>
                                            <legend>Восстановление</legend>

                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.Login, new { @class = "" })

                                                @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })

                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Введите текст с изображения")
                                                @Html.Recaptcha(theme: RecaptchaTheme.Clean)

                                            </div>
                                          
                                            <div class="form-group">
                                                <input type="submit" name="login" value="Восстановить" class="btn btn-primary btn-mrgtp" />
                                            </div>
                                        </fieldset>
                                    }
                                    <footer class="text-center">
                                        <ul>
                                            <li>
                                                @Html.ActionLink("Регистрация", "Register", "Account", null, new { @class = "" })
                                            </li>
                                            <li>
                                                @Html.ActionLink("Главная страница", "Index", "Home", null, new { @class = "" })
                                            </li>
                                        </ul>
                                    </footer>
                                </article>
                            </div>

                        </div>
                        <!-- end of row -->
                    </div>
                    <!-- end of home -->

                </div>

            </div>

        </div>
    </div>

</div>
