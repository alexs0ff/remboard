@model Remontinka.Server.WebPortal.Models.RevenueAndExpenditureReport.RevenueAndExpenditureReportParameters

@Html.DevExpress().FormLayout(settings =>
{
    settings.SetDefaultSettings(Model.Token);
    settings.Name = "RevenueAndExpenditureReportLayout";
    settings.ColCount = 2;
    settings.Items.Add(m => m.BeginDate, i =>
    {
        i.NestedExtension().DateEdit(e =>
        {
            e.SetDefaultSettings(Model.Token);
        });
    });

    settings.Items.Add(m => m.EndDate, i =>
    {
        i.NestedExtension().DateEdit(e =>
        {
            e.SetDefaultSettings(Model.Token);
        });
    });

    settings.Items.Add(m => Model.FinancialGroupID, i =>
        {
            i.NestedExtension().ComboBox(s =>
            {
                s.SetDefaultSettings(Model.Token);
                s.Properties.TextField = "Title";
                s.Properties.ValueField = "FinancialGroupID";
                s.Properties.ValueType = typeof(Guid?);
                s.Properties.DataSource = Model.FinancialGroups;
            });
        });
}).Bind(Model).GetHtml()